<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/mCheckLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/mQStatusBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/statusbar_view_height"
            android:background="#FFFFFF"
            android:elevation="2dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/mRecordDetailToolbar"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:minHeight="74dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:theme="@style/toolbar_theme">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mRecordDoneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="完成"
                android:padding="13dp"
                android:textStyle="normal"
                android:textColor="#F73E00"
                android:textSize="18dp"/>
        </android.support.v7.widget.Toolbar>
        <com.android.lixiang.base.utils.view.BounceScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="#EAEAEA"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#EAEAEA">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mDateTV"
                    android:textSize="14dp"
                    android:textColor="#8D8D8D"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:layout_marginTop="8dp"
                    android:background="#CCFFFFFF">
                    <EditText
                        android:id="@+id/mContentET"
                        android:background="#00000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:hint="请输入日志内容"
                        android:inputType="textMultiLine"
                        android:maxLength="210"
                        android:minLines="7"
                        android:padding="18dp"
                        android:paddingLeft="16dp"
                        android:textColorHint="#9B9B9B"
                        android:textColor="#5C5C5C"
                        android:textSize="16dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/mCountsTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#9B9B9B"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="21dp"
                        android:text="0/210"
                        android:layout_marginBottom="18dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="#CCFFFFFF">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在指定时间提醒我"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textColor="#5C5C5C"/>

                        <Switch
                            android:id="@+id/mSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="19dp"/>
                        <View
                            android:id="@+id/mLine"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="18dp"
                            android:background="#E0E0E0"
                            android:layout_marginRight="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/mAlertTimeRL"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提醒时间"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textColor="#5C5C5C"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/mTimeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="14dp"
                            android:textColor="#9B9B9B"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="18dp"
                            android:background="#E0E0E0"
                            android:layout_marginRight="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/mRepeatRL"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="100dp">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重复"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="16dp"
                            android:textColor="#5C5C5C"/>
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/mRepeatTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="永不"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="43dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="14dp"
                            android:textColor="#9B9B9B"/>
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="8dp"
                            android:layout_height="14dp"
                            android:background="@drawable/ic_foward_gray_light"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
            
        </com.android.lixiang.base.utils.view.BounceScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>