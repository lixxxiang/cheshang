<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mCarStoreInfoReportRL"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp">

    <RelativeLayout
        android:id="@+id/mCarStoreReportTitleRL"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:background="@drawable/round_relativelayout_5_ff7445">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mTextInImageTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/mCarStoreReportTitleRL">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mCarStoreReportTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车商店信息上报"
            android:textColor="#5C5C5C"
            android:textSize="14dp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mCarStoreReportDetailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="其他主体销售政策、店内活动信息上报"
            android:textColor="#747474"
            android:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>